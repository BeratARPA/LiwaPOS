<UserControl x:Class="LiwaPOS.WpfAppUI.UserControls.Management.Settings.LocalSettingsManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiwaPOS.WpfAppUI.UserControls.Management.Settings"
             xmlns:extension="clr-namespace:LiwaPOS.WpfAppUI.Extensions" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding LocalSettingsManagementViewModel,Source={StaticResource ViewModelLocator}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <dx:DXTabControl>
            <dx:DXTabControl.View>
                <dx:TabControlScrollView HeaderLocation="Left" HeaderOrientation="Horizontal"/>
            </dx:DXTabControl.View>

            <dx:DXTabItem Header="{extension:Translator General}">
                <StackPanel>
                    <TextBlock Text="{extension:Translator TerminalName, Suffix=':'}" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Terminals}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedTerminal, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>
                    <GroupBox Header="{extension:Translator ProgramLanguage}" HorizontalAlignment="Left" Margin="0 5 0 0">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="{extension:Translator UILanguage, Suffix=':'}" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding Language, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </dx:DXTabItem>

            <dx:DXTabItem Header="{extension:Translator Database}">
                <StackPanel>
                    <TextBlock Text="{extension:Translator DatabaseConnectionString, Suffix=':'}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}" Width="500" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                        <Button Grid.Column="2" Margin="0 0 5 0" Content="{extension:Translator EditConnection}" Height="30" Command="{Binding OpenDynamicProperyEditorWindowCommand}"/>
                        <Button Grid.Column="2" Content="{extension:Translator Apply}" Height="30" Command="{Binding SaveCommand}"/>
                    </StackPanel>
                </StackPanel>
            </dx:DXTabItem>

            <dx:DXTabItem Header="{extension:Translator MessageServer}">
                <StackPanel>
                    <TextBlock Text="{extension:Translator MessageServerName, Suffix=':'}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>
                    <TextBlock Text="{extension:Translator MessageServerPort, Suffix=':'}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ServerPort, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>
                    <CheckBox Margin="0 5 0 0" Content="{extension:Translator AutoStartMessageClient}" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                        <Button Grid.Column="2" Margin="0 0 5 0" Content="{extension:Translator TestMessageServerConnection}" Height="30" Command="{Binding ServerTestCommand}"/>
                        <Button Grid.Column="2" Content="{extension:Translator FindMessageServer}" Height="30" Command="{Binding ServerSearchCommand}"/>
                    </StackPanel>
                </StackPanel>
            </dx:DXTabItem>

            <dx:DXTabItem Header="{extension:Translator Display}">
                <StackPanel>
                    <CheckBox Margin="0 5 0 0" Content="{extension:Translator UseDarkTheme}" HorizontalAlignment="Left" IsChecked="{Binding UseDarkMode, UpdateSourceTrigger=PropertyChanged}"/>
                    <CheckBox Margin="0 5 0 0" Content="{extension:Translator AllowCustomNavigation}" HorizontalAlignment="Left" IsChecked="{Binding UseCustomNavigation, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </dx:DXTabItem>
        </dx:DXTabControl>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="2" Content="{extension:Translator Save}" Height="30" Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</UserControl>
