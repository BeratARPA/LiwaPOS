<UserControl x:Class="LiwaPOS.WpfAppUI.UserControls.Management.Printing.PrinterTemplateManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiwaPOS.WpfAppUI.UserControls.Management.Printing"
             xmlns:extension="clr-namespace:LiwaPOS.WpfAppUI.Extensions" 
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             DataContext="{Binding PrinterTemplateManagementViewModel,Source={StaticResource ViewModelLocator}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{extension:Translator Name, Suffix=':'}" VerticalAlignment="Center"/>
                <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{extension:Translator TemplateHelp}" Margin="0,0,5,0" Width="100" Height="30" Command="{Binding TemplateHelpCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                <Button Content="{extension:Translator Preview}" Margin="0,0,5,0" Width="100" Height="30" Command="{Binding PreviewCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                <Button Content="{extension:Translator Print}" Width="100" Height="30" Command="{Binding PrintCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <wpf:WebView2 x:Name="MonacoEditorWebView" Grid.Column="0" Margin="10"/>

            <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Gray"/>

            <Grid Grid.Column="1" Background="White" Margin="10">
                <FlowDocumentScrollViewer   Document="{Binding Document}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="{extension:Translator Close}" Height="30" Command="{Binding CloseCommand}"/>
            <Button Grid.Column="2" Content="{extension:Translator Save}" Height="30" Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</UserControl>
