<UserControl x:Class="LiwaPOS.WpfAppUI.UserControls.Management.Users.UserRoleManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiwaPOS.WpfAppUI.UserControls.Management.Users"
             mc:Ignorable="d"            
             xmlns:extension="clr-namespace:LiwaPOS.WpfAppUI.Extensions" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             d:DesignHeight="600" d:DesignWidth="800"
             DataContext="{Binding UserRoleManagementViewModel,Source={StaticResource ViewModelLocator}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <dx:DXTabControl>
            <dx:DXTabControl.View>
                <dx:TabControlScrollView HeaderLocation="Left" HeaderOrientation="Horizontal"/>
            </dx:DXTabControl.View>

            <dx:DXTabItem Header="{extension:Translator GeneralSettings}">
                <StackPanel>
                    <TextBlock Text="{extension:Translator Name, Suffix=':'}" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>

                    <CheckBox Content="Admin" HorizontalAlignment="Left" IsChecked="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </dx:DXTabItem>

            <dx:DXTabItem Header="{extension:Translator Permissions}">
                <StackPanel>
                    <!-- Navigasyon İzinleri -->
                    <Expander Header="Navigasyon İzinleri" IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{extension:Translator ExitFullscreen}" IsChecked="{Binding ExitFullscreen, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewAccountScreen}" IsChecked="{Binding ViewAccountScreen, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewStockNavigation}" IsChecked="{Binding ViewStockNavigation, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator AccessManagement}" IsChecked="{Binding AccessManagement, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewMarketNavigation}" IsChecked="{Binding ViewMarketNavigation, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator AccessNavigation}" IsChecked="{Binding AccessNavigation, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator PerformEndOfDay}" IsChecked="{Binding PerformEndOfDay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator AdminPinApproval}" IsChecked="{Binding AdminPinApproval, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator OpenReports}" IsChecked="{Binding OpenReports, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>

                    <!-- Hesap İzinleri -->
                    <Expander Header="Hesap İzinleri" IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{extension:Translator CreateAccount}" IsChecked="{Binding CreateAccount, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>

                    <!-- Adisyon İzinleri -->
                    <Expander Header="Adisyon İzinleri" IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{extension:Translator UnlockBill}" IsChecked="{Binding UnlockBill, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator RemoveBillTag}" IsChecked="{Binding RemoveBillTag, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator MergeBills}" IsChecked="{Binding MergeBills, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewOldBills}" IsChecked="{Binding ViewOldBills, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator AddExtraFeature}" IsChecked="{Binding AddExtraFeature, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewOthersDocuments}" IsChecked="{Binding ViewOthersDocuments, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ModifyBillExistence}" IsChecked="{Binding ModifyBillExistence, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ChangeOrderQuantity}" IsChecked="{Binding ChangeOrderQuantity, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ChangeSelectedOrderQuantity}" IsChecked="{Binding ChangeSelectedOrderQuantity, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator AllowRefund}" IsChecked="{Binding AllowRefund, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewOpenBills}" IsChecked="{Binding ViewOpenBills, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator ViewBillsDuringPayment}" IsChecked="{Binding ViewBillsDuringPayment, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator CloseTips}" IsChecked="{Binding CloseTips, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{extension:Translator CanPerformEndOfDay}" IsChecked="{Binding CanPerformEndOfDay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>

                    <!-- Rapor İzinleri -->
                    <Expander Header="Rapor İzinleri" IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{extension:Translator ChangeReportDate}" IsChecked="{Binding ChangeReportDate, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>

                    <!-- Departman İzinleri -->
                    <Expander Header="Departman İzinleri" IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{extension:Translator ChangeDepartment}" IsChecked="{Binding ChangeDepartment, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </dx:DXTabItem>
        </dx:DXTabControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="{extension:Translator Close}" Height="30" Command="{Binding CloseCommand}"/>
            <Button Grid.Column="2" Content="{extension:Translator Save}" Height="30" Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</UserControl>
