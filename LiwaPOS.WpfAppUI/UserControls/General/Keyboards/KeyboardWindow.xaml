<Window x:Class="LiwaPOS.WpfAppUI.UserControls.General.Keyboards.KeyboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiwaPOS.WpfAppUI.UserControls.General" 
        xmlns:keyboards="clr-namespace:LiwaPOS.WpfAppUI.UserControls.General.Keyboards" 
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        mc:Ignorable="d"
        Title="Liwa Keyboard" Width="700" Height="300" ResizeMode="CanResizeWithGrip" 
        WindowStyle="None" Topmost="True" Loaded="Window_Loaded"
        ShowInTaskbar="False" Focusable="False" 
        ShowActivated="False" Unloaded="Window_Unloaded" Activated="Window_Activated" Deactivated="Window_Deactivated"        
        Style="{DynamicResource CustomWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock FontWeight="Bold" Margin="5,3,0,3" FontSize="15">Liwa Keyboard</TextBlock>
                <dx:SimpleButton Grid.Column="1" FontWeight="Bold" Width="50" Margin="3" Click="Button_Click_1">▄</dx:SimpleButton>
                <dx:SimpleButton Grid.Column="2" FontWeight="Bold" Width="50" Margin="3" Click="Button_Click">X</dx:SimpleButton>
            </Grid>
        </Border>

        <TextBox Grid.Row="1" Name="TextBoxInput" AcceptsReturn="True" FontSize="20" PreviewKeyDown="TextBox_PreviewKeyDown" Margin="0,0,0,10"/>
        <Viewbox Stretch="Uniform" Grid.Row="2">
            <keyboards:Keyboard1UserControl x:Name="Keyb"/>
        </Viewbox>
    </Grid>
</Window>
