<UserControl x:Class="LiwaPOS.WpfAppUI.UserControls.NavigationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiwaPOS.WpfAppUI.UserControls" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <dxlc:TileLayoutControl x:Name="TileLayoutControlNavigation" Grid.ColumnSpan="2">
            <dxlc:Tile Header="Tile" Size="ExtraSmall"/>
            <dxlc:Tile Header="Tile" Size="Small"/>
            <dxlc:Tile Header="Tile" Size="Large" VerticalHeaderAlignment="Center" HorizontalHeaderAlignment="Center"/>
            <dxlc:Tile Header="Tile" Size="ExtraLarge"/>
        </dxlc:TileLayoutControl>
    </Grid>
</UserControl>
